#!/usr/bin/env bash

# Install command-line tools using Homebrew, NPM and etc.

# Ask for the administrator password upfront.
sudo -v

# Keep-alive: update existing `sudo` time stamp until the script has finished.
while true; do sudo -n true; sleep 60; kill -0 "$$" || exit; done 2>/dev/null &

# Make sure we’re using the latest Homebrew.
brew update

# Upgrade any already-installed formulae.
brew upgrade

# Install Brew Cask
brew tap caskroom/cask

# Install GNU `find`, `locate`, `updatedb`, and `xargs`, `g`-prefixed.
brew install findutils
brew install coreutils
brew install grep

# Install Bash 4.
# Note: don’t forget to add `/usr/local/bin/bash` to `/etc/shells` before
# running `chsh`.
brew install bash
brew install bash-completion

# Install `wget` with IRI support.
brew install wget --with-iri

# Install more recent versions of some OS X tools.
brew install vim --override-system-vi

# Install other useful binaries.
brew install ack
# brew install git
brew install imagemagick@6 --force --with-webp
brew link imagemagick@6 --force
brew install gifsicle
brew install potrace
brew install ssh-copy-id
brew install tree
brew install ctags-exuberant
brew install tmux
brew install jq
brew install ffmpeg --with-libvpx
brew install qpdf
brew install fswatch
brew install reattach-to-user-namespace

# Required by passbox
brew install gpg

# Remove outdated versions from the cellar.
brew cleanup

# Other tools
brew install youtube-dl

# Installing Quick Look plugins
# See https://github.com/sindresorhus/quick-look-plugins
brew cask install qlcolorcode
#brew cask install qlstephen
brew cask install qlmarkdown
brew cask install webpquicklook

# Installing Node.js
brew install node
brew install yarn

# Installing N
npm install -g n

# Installing postcss-sorting (required by vim's css-sorting)
npm install -g postcss-cli postcss-sorting

# Typescript
npm -g install typescript

# Installing JS tools
npm install -g eslint
npm install -g prettier

# NPX
npm install -g npx

# Installing jekyll
gem install jekyll --user-install
gem install bundler --user-install

# Ripgrep
brew install ripgrep
